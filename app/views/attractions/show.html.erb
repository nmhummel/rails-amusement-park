Name: <%= @ride.attraction.name %><br>
<br>
Ticket Requirement: <%= @ride.attraction.tickets %><br>
<br>
Height Requirement: <%= @ride.attraction.min_height %><br>
<br>
Nausea Rating: <%= @ride.attraction.nausea_rating %><br>
<br>
Happiness Rating: <%= @ride.attraction.happiness_rating %><br>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit "Go on this ride" %>
    <%end%>
<% end %>