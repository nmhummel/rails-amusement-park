<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
    <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
    <br>
  <%= f.label "How happy are you right now? (1-5 Scale)" %><br>
  <%= f.number_field :happiness %><br>
    <br>
  <%= f.label "How nauseous are you right now? (1-5 scale)" %><br>
  <%= f.number_field :nausea %><br>
    <br>
  <%= f.label :height %><br>
  <%= f.number_field :height %><br>
    <br>
  <%= f.label "How much do you want to spend?" %><br>
  <%= f.number_field :tickets %><br>
    <br>
  Check box if you are a theme park owner: 
  <%= f.check_box :admin, {}, true %>
    <br><br>
  <%= f.submit "Create User" %>
<% end %>